@model ArtistProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<div class="card mb-3">
    <img class="card-img-top avatar" src="https://pbs.twimg.com/profile_images/1369769896528273412/rJoSie7L_400x400.jpg" alt="avatar">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
        <p class="card-text"><small class="text-muted">Followers - @Model.Followers</small></p>
        <p class="card-text"><small class="text-muted">Available to commission - @(Model.AvailableToCommission ? "Yes" : "No")</small></p>
    </div>
</div>