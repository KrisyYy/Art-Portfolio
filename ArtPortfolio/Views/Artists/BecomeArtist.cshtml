@model BecomeArtistFormModel
@{
    ViewData["Title"] = "Switch to an Artist";
}

<div class="row">
    <div class="offset-lg-3 col-lg-6 offset-md-2 col-md-8 col-sm-12">
        <h1 class="title-margin">Convert to an artist account?</h1>
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Your name here..">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Your description here... (Optional)" rows="3"></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

