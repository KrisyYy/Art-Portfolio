@model ArtCreateModel
@{
    ViewData["Title"] = "Create";
}



<div class="row">
    <div class="offset-md-2 col-md-8 col-sm-12">
        <h1>Create Artwork</h1>
        <form method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Example Title">
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Your description here..." rows="3"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="www.imageurl.com/example">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>