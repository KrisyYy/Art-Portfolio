@model ArtCreateModel
@{
    ViewData["Title"] = "Create";
}



<div class="row">
    <div class="offset-lg-3 col-lg-6 offset-md-2 col-md-8 col-sm-12">
        <h1 class="title-margin">Create Artwork</h1>
        <form method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Example Title">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Your description here... (Optional)" rows="3"></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="www.imageurl.com/example">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>