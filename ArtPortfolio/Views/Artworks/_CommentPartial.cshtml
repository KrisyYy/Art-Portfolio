@model CommentViewModel

<div class="p-3">
    <div class="container float-left">
        <h5 class="card-title"><small>from: </small>@Model.Username</h5>
        <p class="card-text">@Model.Content</p>
    </div>
    <div class="float-right">
        @if (@Model.UserId == this.User.Id() || User.IsAdmin())
        {
            <a asp-controller="Comment" asp-action="DeleteComment" asp-route-id="@Model.Id" role="button" class="btn btn-outline-info float-right">Delete</a>
        }
    </div>
</div>