@model List<ArtListingViewModel>
@{
    ViewData["Title"] = "Home Page";
}

@{
    var firstImage = Model.Any() ? Model[0] : null;
    var restOfImages = Model.Any() ? Model.Skip(1).ToList() : null;
}

<div class="text-center">
    <p>TODO: fix carousel sizing, crop them to a square, add css for no images</p>
    
    @if (firstImage == null)
    {
        <p>Currently no images available (TODO)</p>
    }
    else
    {
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                @for (int i = 1; i <= restOfImages.Count(); i++)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                }
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="@firstImage.ImageUrl" alt="@firstImage.Title">
                </div>
                @foreach (var image in restOfImages)
                {
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@image.ImageUrl" alt="@image.Title">
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    }
</div>
