@model PropFormModel

<div class="form-row">
    <label asp-for="Name" class="col-2"></label>
    <div class="col-6">
        <input asp-for="Name" class="form-control" placeholder="Prop Name">
    </div>
    <label asp-for="Quantity"></label>
    <div class="col-2">
        <input asp-for="Quantity" class="form-control" placeholder="1">
    </div>
</div>
<div class="form-row">
    <label asp-for="Description" class="col-2"></label>
    <div class="col-10">
        <textarea asp-for="Description" class="form-control" placeholder="Your description here... (Optional)"></textarea>
    </div>
</div>